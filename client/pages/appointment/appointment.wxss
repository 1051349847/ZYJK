/* pages/appointment/appointment.wxss */

page {
  background: #f0f0f0;
}

.section {
  width: 690rpx;
  height: 340rpx;
  margin: 0 auto;
}

.input_one {
  border-radius: 30rpx;
  border: 1px solid #f5f5f5;
  width: 690rpx;
  height: 70rpx;
  background: #f5f5f5;
  line-height: 70rpx;
  font-size: 32rpx;
  color: #333333;
}

.input_one text {
  margin-left: 30rpx;
}

.input_one span {
  float: right;
  margin-right: 30rpx;
  color: #f18d00;
  font-size: 30rpx;
}

.map_img {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
  position: relative;
}

.img_cont {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
}

.map_cont {
  width: 100%;
  display: flex;
  position: absolute;
  bottom: 0rpx;
  background-color: rgba(0, 0, 0, 0.2);
  color: #fff;
  font-size: 28rpx;
  line-height: 50rpx;
}

.map_cont image {
  width: 20rpx;
  height: 30rpx;
  margin-left: 20rpx;
  vertical-align: middle;
  margin-top: 10rpx;
  margin-right: 10rpx;
}

.map_cont input {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
  line-height: 40rpx;
  width: 640rpx;
}

.choose {
  width: 100%;
  height: 210rpx;
  background: #fff;
}

.choose-cont {
  width: 720rpx;
  height: 210rpx;
  float: right;
}

.choose_top {
  height: 88rpx;
  line-height: 88rpx;
  width: 100%;
  font-size: 32rpx;
  color: #999;
  border-bottom: 1rpx solid #e5e5e5;
}

.choose_bottom {
  width: 100%;
  margin-top: 30rpx;
  display: flex;
}

.choose_bottom ul {
  /* width: 100%; */
  display: flex;
}

/* .choose_bottom ul:last-child{
  color: red;
} */

.choose_bottom li {
  width: 158rpx;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 60rpx;
}

.choose_bottom #li_nie {
  background: #f18d00;
  color: #fff;
}

.choose_bottom .l_1 {
  margin-right: 20rpx;
}

.choose_bottom .indexs {
  background: #f18d00;
  color: #fff;
}

.c_data {
  width: 100%;
  height: 290rpx;
  background: #fff;
}

.choose-data {
  width: 720rpx;
  margin-left: 30rpx;
}

.data_top {
  height: 88rpx;
  line-height: 88rpx;
  width: 100%;
  font-size: 32rpx;
  color: #999;
  border-bottom: 1rpx solid #e5e5e5;
}

.data_bottom {
  width: 100%;
  margin-top: 10rpx;
  height: 160rpx;
  overflow-x: hidden;
}

.data_bottom ul {
  display: flex;
  margin-top: 20rpx;
}

.data_bottom .l_1 {
  width: 158rpx;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 60rpx;
  margin-right: 20rpx;
}

.data_time{
  float:left;
  width:calc(20% - 0px);
  display:block;
  margin-top: 20rpx;
}

.data_bottom .index {
  background: #f18d00;
  color: #fff;
}

.data_bottom #li_nie {
  background: #f18d00;
  color: #fff;
}

.but {
  width: 690rpx;
  margin: 0 auto;
  background: #f18d00;
  border-radius: 10rpx;
  color: #fff;
  font-size: 36rpx;
  height: 88rpx;
  margin-top: 60rpx;
}

.but::after {
  border: 0;
}
