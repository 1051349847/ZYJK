/* pages/share/share.wxss */
page{
  background: #ccc
}

.invitation{
  margin: auto;
  margin-top: 20rpx;
  width: 94%;
  background: #fff;
  border-radius: 10rpx;
  text-align: center;
  height: 1000rpx
}

.footer{
  display: flex;
  align-items: center;
  width: 100%;
  background: #249ff7;
  position: fixed;
  bottom: 0;
  height: 100rpx;
  text-align: center;
}

.btn-add{
  width: 100%;
  font-size: 32rpx;
  background: #249ff7;
  color: #fff
}

.btn-add::after{
  border: 0
}

.home{
  position: fixed;
  left: 0rpx;
  bottom: 160rpx;
  width: 140rpx;
  height: 60rpx;
  background: #fbc955;
  border-radius: 0rpx 30rpx 30rpx 0rpx
}

.goHome{
  color: #fff;
  font-size: 28rpx;
  padding-left: 20rpx;

}

.picImages{
  text-align: center;
  overflow:hidden;
  display: block;
  margin-top: 50rpx;
  border-radius: 50%;
}

.picImages image{
  text-align: center;
  width: 100rpx;
  height: 100rpx;
  margin-top: 50rpx;
  border-radius: 50%;
}

.nickname{
  margin-top: 10rpx;
  color: #249ff7;
  font-size: 32rpx
}

.friend{
  margin-top: 20rpx;
  color: #333333;
  font-size: 32rpx
}

.group{
  width: 100%;
  margin-top: 40rpx;  
}

.card{
  display: flex;
  justify-content: center;
  margin: 0rpx 200rpx;
  padding: 14rpx 0rpx;
  border-top: 2rpx solid #249ff7;
  border-bottom: 2rpx solid #249ff7;
  font-size: 32rpx
}

.headImg{
  margin-top: 60rpx;
  width: 200rpx;
  height: 200rpx
}

.text{
  margin-top: 40rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  color: #333
}

.pic{
  width: 100%;
  display: flex;
  justify-content: center
}